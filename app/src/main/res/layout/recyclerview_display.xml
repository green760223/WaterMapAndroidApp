<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:id="@+id/recyler_layout"
    >

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/image"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="室內/室外"
        android:id="@+id/locate"
        android:layout_alignTop="@+id/image"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="150m"
        android:id="@+id/distance"
        android:layout_below="@id/locate"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="5"
        android:id="@+id/count"
        android:layout_below="@id/distance"
        android:layout_marginRight="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="人"
        android:layout_marginRight="10dp"
        android:id="@+id/come"
        android:layout_below="@id/distance"

        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="水點名稱"
        android:layout_toRightOf="@+id/image"
        android:id="@+id/water_name"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="水點描述"
        android:layout_toRightOf="@+id/image"
        android:layout_below="@+id/rating"
        android:id="@+id/water_description"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="水點地址"
        android:layout_toRightOf="@+id/image"
        android:layout_below="@+id/water_description"
        android:id="@+id/water_address"
        />

    <RatingBar
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/water_name"
        android:layout_toRightOf="@+id/image"
        android:isIndicator="true"
        android:max="5"
        android:numStars="5"
        android:rating="3.5"
        style="@android:style/Widget.Holo.RatingBar.Small"
        />











</RelativeLayout>